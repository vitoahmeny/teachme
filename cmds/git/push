#!/usr/bin/bash
echo "This is a git test command."

# The command's name
echo -e 'git test'

# the command's description
echo "description here"

echo "------------"

# the command's syntax
echo "Syntax:"
echo "git test argument1 argument2"
echo -e "\targument1: description of argument 1"
echo -e "\targument2: description of argument 2"
#   ...      etc

echo "------------"

# the command's usage examples
# example 1
echo "git push"
echo "Works like git push <remote> where <remote> is the current branch's remote."

# example 2
echo "git push -u origin <branch>"
echo "u stands for setting up upstream, add upstream reference to a branch that is up to date or successfully merged."


exit 0
